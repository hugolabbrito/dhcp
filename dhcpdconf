# Hugo Leonardo - hugolabbrito@gmail.com
# Arquivo de Configuração DHCP Server para Linux

allow booting;
allow bootp;

ddns-update-style none;

#dns-update-style ad-hoc;

subnet 10.1.1.0 netmask 255.255.255.0  {
default-lease-time 604800;
max-lease-time 2592000;
option subnet-mask 255.255.255.0;
option broadcast-address 10.1.1.255;
option routers 10.1.1.1;
option domain-name-servers 10.1.1.1,200.223.0.85;
authoritative;
option domain-name "cepca.edu.br";
range 10.1.1.3 10.1.1.50;
}


group {
filename "pxelinux.0";
host Biblioteca-01 {
#Endereco MAC da maquina cliente
hardware ethernet 00:18:f3:dc:dc:a2;
#Endereçdo servior tftpd e diretó de boot)
option root-path "192.168.0.1:/tftpboot/";
}
}

